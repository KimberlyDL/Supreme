# backend\.env.example
# Environment
NODE_ENV=development
FRONTEND_DOMAIN=http://localhost:5000/
BACKEND_DOMAIN=http://localhost:3000/
PORT=3000

# Firebase Storage
FIREBASE_SERVICE_FIRESTORAGE=gs://your-bucket-name.appspot.com
FIREBASE_SERVICE_FIRESTORAGE_URL=your-bucket-name.appspot.com

# Firebase Admin SDK JSON (should be kept outside git or encrypted)
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-adminsdk-file.json

# SendGrid API Key
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google SMTP Service (DO NOT COMMIT real credentials)
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password_here
